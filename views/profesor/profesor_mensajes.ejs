<%- include ../layouts/profesor_header.ejs %>

<div class="container blog-content" id="seccion1">

    <div class="row">
        <div class="col-sm-6" style="">
            <h4 style="">Mensajes</h4><br>
            <%
            if(data.length > 0){
                for(var i=0; i < data.length; i++){
                %>
                <a class="nav-link link" href="/profesor/profesor_chat/<%=data[i].idusuario%>">
                    <div class="panel panel-default" style="padding: 5px; margin-bottom: 0">
                        <%
                            var fecha = data[i].fecha_ultimo_msj.split("T")[0].split("-");
                            var str_fecha = fecha[2].toString() + "/" + fecha[1] + "/" + fecha[0];
                            var hora = data[i].fecha_ultimo_msj.split("T")[1].split("Z")[0].split(":");
                            str_hora = hora[0] + ":" + hora[1]
                        %>
                        <div class="row">
                            <div class="col-sm-10" style="">
                                <h5><i style="" class="fa fa-user-circle"></i> <%=data[i].nombre%> <%=data[i].apellido%></h5>
                            </div>
                            <div class="col-sm-2" style="">
                                <%=str_fecha%>
                            </div>
                            <div class="col-sm-10">
                                <p style="color: black"><%=str_hora%> - <%=data[i].ultimo_msj%></p>
                            </div>
                        </div>
                    </div>
                </a>
                <%}
            }%>
        </div>
    </div><!-- /.row -->
</div><!-- /.container -->

<style>
    .h4_title{
        font-weight: 600; 
        padding: 10px; 
        margin-left: 5px; 
        margin-right: 5px; 
        margin-bottom: 2px; 
        text-align: center; 
        padding-bottom: 5px; 
        border-bottom: solid #289B89;
    }
</style>

<script type="text/javascript">
    $(document).ready(function(){
        var largo = $(window).height();
        $("#seccion1").css("min-height", largo-250)
    });

</script>

